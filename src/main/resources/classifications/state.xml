<?xml version="1.0" encoding="UTF-8"?>
<mycoreclass ID="state"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="MCRClassification.xsd">
  <label xml:lang="de" text="Objektstatus" />
  <label xml:lang="en" text="Object state" />
  <label xml:lang="x-uri" text="https://levana.leopoldina.org/api/v2/classifications/state" />
  <categories>
    <category ID="new">
      <label xml:lang="de" text="erstellt" description="Dokument angelegt bzw. gespeichert" />
      <label xml:lang="en" text="created" />
      <label xml:lang="x-next" text="submitted" />
    </category>
    <category ID="submitted">
      <label xml:lang="de" text="eingereicht" description="Dokument zur Überprüfung" />
      <label xml:lang="en" text="submitted" />
      <label xml:lang="x-next" text="review" />
    </category>
    <category ID="review">
      <label xml:lang="de" text="in Bearbeitung" />
      <label xml:lang="en" text="in review" />
      <label xml:lang="x-next" text="publishable,published,new" />
    </category>
    <category ID="publishable">
      <label xml:lang="de" text="für Veröffentlichung vorgemerkt" />
      <label xml:lang="en" text="marked for publication" />
    </category>
    <category ID="published">
      <label xml:lang="de" text="veröffentlicht" />
      <label xml:lang="en" text="published" />
      <label xml:lang="x-next" text="blocked,deleted" />
    </category>
    <category ID="blocked">
      <label xml:lang="de" text="gesperrt" />
      <label xml:lang="en" text="blocked" />
      <label xml:lang="x-next" text="published,deleted" />
    </category>
    <category ID="deleted">
      <label xml:lang="de" text="gelöscht" />
      <label xml:lang="en" text="deleted" />
      <label xml:lang="x-next" text="published,blocked" />
    </category>
  </categories>
</mycoreclass>
